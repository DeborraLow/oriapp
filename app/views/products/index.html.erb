
<div class="uni_name_line">
<%= @uni.name %>で予約できる袴一覧
</div>

<div class="maincontents">
<div class="breadcrumbs-container">
<a href="/top" class="breadcrumbs-link">Home</a>
        <span class="breadcrumbs-separator">/</span>
        <a href="/unis" class="breadcrumbs-link">大学検索</a>
        <span class="breadcrumbs-separator">/</span>
        <a href="/unis/<%= @uni.id %>" class="breadcrumbs-link"><%= @uni.name %></a>
        <span class="breadcrumbs-separator">>>></span>
        <a href="/unis/<%= @uni.id %>" class="breadcrumbs-link">商品一覧</a>
      </div>


   <h1 class="listtitle">商品一覧</h1>
     <ul class="productlist">
     <% @products.each do |kimono| %>
        <li>
          <div class="kimonopic">
            <% num = 1 %>
            <% kimono.product_images.each do |pic| %>
          <a href="/unis/<%= @uni.id %>/products/<%= kimono.id %>" class="eachpic">
              <% if num == 1%>
                <img class="eachpic" src="<%= pic.image %>">
              <% end %>
              <% num += 1 %>
            <% end %>
            </a>
          </div>
          <a href="/unis/<%= @uni.id %>/products/<%= kimono.id %>" class="kimonodetail">
          <p class="kimonodetail">
            <span>詳細はこちら</span>
          </p>
          </a>
        </li>

        <% end %>

     </ul>
</div>
